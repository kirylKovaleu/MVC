@model IEnumerable<Auction.Models.LoginUserModel>

@{
    ViewBag.Title = "ShowAllUsers";
}

<h2>@App_LocalResources.GlobalRes.ЗарегистрированыеПользователи</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Login)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegistrionDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.role)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Login)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Password)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RegistrionDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.role)
        </td>
        <td>
            @Html.RouteLink(App_LocalResources.GlobalRes.Удалить, new { controller = "User", action = "DeleteUsers", area = "", @item.Id })
            @Html.RouteLink(App_LocalResources.GlobalRes.ПовыситьСтатусПользователя, new { controller = "User", action = "UpStatusUser", area = "", @item.Id })
    </tr>
}

</table>
